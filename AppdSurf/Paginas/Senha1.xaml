<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppdSurf.Paginas.Senha1"
             BackgroundImageSource="fundoo.svg"      
             NavigationPage.HasNavigationBar="False"
             Title="Login">
    <VerticalStackLayout>

        <Label
            Text="RECUPERAÇÃO DE 
                  SENHA"
            FontSize="30"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontFamily="Poppins-Black"
            Margin="60,0,0,0"
            
            >

        </Label>

        <Label
      Text=" Por favor preencha os formulários para que possamos recuperar sua senha."
      FontSize="20"
      VerticalOptions="Start" 
      HorizontalOptions="Start"
            FontFamily="Poppins-Black"
            Margin="10,10,0,0"
      >

        </Label>
        <HorizontalStackLayout Margin="20,70,0,0">
            <Image Source="vector.svg" WidthRequest="30" Margin="49,0,10,0"></Image>
            <Label Text="Nome" FontSize="20" Margin="0,0,0,0"/>

        </HorizontalStackLayout>
        <Entry Placeholder="" WidthRequest="250"
        Margin="0,0,0,20"
        Keyboard="Text"
                x:Name="txtNome" 
            Text="{Binding Nome}"
        >
        </Entry>

      

        <HorizontalStackLayout Margin="20,20,0,0">
            <Image Source="mail.svg" WidthRequest="30" Margin="49,0,10,0"></Image>
            <Label  Text="E-mail" FontSize="20" Margin="0,0,0,0"/>

        </HorizontalStackLayout>
        <Entry Placeholder="" WidthRequest="250"
                Margin="0,0,0,20"
                Keyboard="Email"
                x:Name="txtEmail" 
Text="{Binding Email}"
                >
        </Entry>





        



        <Button
                    x:Name="btnConfirmar"
                     FontSize="22"
                     Background="black"
                     Clicked="btnConfirmar_Clicked"
                     Text="CONFIRMAR"
                    TextColor="White"
                    WidthRequest="320"
                    CornerRadius="40"
                    Margin="20,100,20,0"
                    HeightRequest="57.47"  />
                 








    </VerticalStackLayout>
</ContentPage>